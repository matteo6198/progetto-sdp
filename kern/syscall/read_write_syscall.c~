#include "read_write_syscalls.h"


int sys_read(int file, void* buffer, int size){
  char* read_buffer = (char*)buffer;
  int i = file;
  char c;

  if(buffer == NULL)
    return 0;
  
  for(i = 0; i < size; i++){
    c = getch();
    if(c == 3){
      read_buffer[i] = '\0';
      break;
    }
    read_buffer[i] = c;
  }
  
  return i;
}

int sys_write(int file, void* buffer, int size){
  char* write_buffer = (char*) buffer;
  int nw = file;

   if(buffer == NULL)
    return 0;

  for(nw = 0; nw < size; nw++){
    putch(write_buffer[nw]); 
  }
  return nw;
}
